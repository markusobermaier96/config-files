{
    // Theme
    "workbench.colorTheme": "GitHub Dark",
    "workbench.iconTheme": "moxer-icons",

    // Typography
    "editor.fontFamily": "Geist Mono, JetBrains Mono, Fira Code",
    "editor.fontLigatures": true,
    "scm.inputFontFamily": "Fira Code",
    "editor.suggestFontSize": 16,
    "editor.suggestLineHeight": 30,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.fontSize": 16,

    // UI
    "editor.minimap.enabled": false,
    "window.commandCenter": true,
    "window.menuBarVisibility": "compact",
    "editor.scrollbar.vertical": "auto",
    "editor.scrollbar.horizontal": "auto",
    "window.titleBarStyle": "custom",
    "workbench.sideBar.location": "right",
    "editor.copyWithSyntaxHighlighting": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.emptySelectionClipboard": false,
    "workbench.editor.enablePreview": false,
    "window.newWindowDimensions": "inherit",
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "editor.snippetSuggestions": "top",
    "editor.detectIndentation": false,
    "window.nativeFullScreen": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "workbench.editor.showTabs": "none",
    "editor.lineNumbers": "off",
    "editor.guides.indentation": false,

    // Silence the Noise
    "breadcrumbs.enabled": false,
    "scm.diffDecorations": "none",
    "editor.hover.delay": 1500,
    "editor.hover.enabled": true,
    "editor.matchBrackets": "never",
    "workbench.tips.enabled": false,
    "editor.colorDecorators": false,
    "git.decorations.enabled": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": "off",
    "editor.selectionHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",

    "vscode_custom_css.imports": [
        "file:///C:/Users/obermaier/.vscode/customization/custom-vscode.css",
        "file:///C:/Users/obermaier/.vscode/customization/custom-vscode-script.js"
    ],

    "search.useIgnoreFiles": false,
    "search.exclude": {
        // Hide everything in /vendor, except the "laravel" and "livewire" folder.
        "**/vendor/{[^l],?[^ai]}*": true,
        // Hide everything in /public, except "index.php"
        "**/public/{[^i],?[^n]}*": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/composer.lock": true,
        "**/package-lock.json": true,
        "storage": true,
        ".phpunit.result.cache": true
    },

    // Excluded files
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/Thumbs.db": false,
        "**/node_modules": false,
        "**/.sveltekit": false,
        "**/.cache": false,
        "**/.gitlab": false,
        "**/.logs": false,
        "**/.phive": false,
        "**/.idea": false,
        "**/.editorconfig": false,
        "**/.eslintrc.js": false,
        "**/.gitignore": false,
        "**/.prettierrc": false,
        "**/.prettierignore": false,
        "**/.gitlab-ci.yml": false,
        "**/.stylelintrc": false,
        "**/.env.dist": false,
        "**/.babelrc": false,
        "**/.gitattributes": false,
        "**/.jshintrc": false,
        "**/.arcconfig": false,
        "**/composer.lock": false,
        "**/dep": false,
        "**/vendor": false,
        "**/flow": false,
        "**/flow.bat": false,
        "**/package-lock.json": false,
        "**/rsync-filter.cfg": false,
        "**/webpack.common.js": false,
        "**/webpack.development.js": false,
        "**/webpack.production.js": false,
        "**/phpcomp.xml": false,
        "**/psalm.xml": false,
        "**/Packages": false,
        "**/Web": false,
        "**/bin": false,
        "**/Build": false,
        "**/Data": false,
        "**/composer": false,
        "**/domains": false,
        "**/script": false,
        "**/tron": false,
        "**/src/admin": false,
        "**/src/datamodules": false,
        "**/src/images": false,
        "**/src/service": false,
        "**/src/portal/dist": false,
        "**/src/portal/imxLibrary": false,
        "**/var": false,
        "**/.nuxt": false,
        "**/.output": false,
        "**/bun.lockb": false,
        "**/.turbo": false
    },

    // Debugging
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Listen for Xdebug",
                "type": "php",
                "request": "launch",
                "port": 9000,
                "pathMappings": {
                    "/app": "${workspaceFolder}",
                    "/app/packages": "${workspaceFolder}/packages",
                    "/app/public": "${workspaceFolder}/public",
                    "/app/vendor": "${workspaceFolder}/vendor"
                },
                "hostname": "localhost",
                "cwd": "/app",
            },
            {
                "name": "PHP Unit Test with Xdebug",
                "type": "php",
                "request": "launch",
                "program": "${workspaceFolder}/vendor/bin/phpunit",
                "args": ["--filter", "${fileBasenameNoExtension}"],
                "cwd": "/app",
                "runtimeExecutable": "/usr/bin/php",
                "runtimeArgs": [
                    "-dxdebug.start_with_request=yes"
                ],
                "env": {
                    "XDEBUG_MODE": "debug,develop",
                    "XDEBUG_CONFIG": "client_port=9000"
                },
                "port": 9000,
                "pathMappings": {
                    "/app": "${workspaceFolder}",
                    "/app/packages": "${workspaceFolder}/packages",
                    "/app/public": "${workspaceFolder}/public",
                    "/app/vendor": "${workspaceFolder}/vendor"
                },
            },
            {
                "name": "Launch currently open script",
                "type": "php",
                "request": "launch",
                "program": "${file}",
                "cwd": "${fileDirname}",
                "port": 0,
                "runtimeArgs": [
                    "-dxdebug.start_with_request=yes"
                ],
                "env": {
                    "XDEBUG_MODE": "debug,develop",
                    "XDEBUG_CONFIG": "client_port=${port}"
                }
            },
            {
                "name": "Launch Built-in web server",
                "type": "php",
                "request": "launch",
                "runtimeArgs": [
                    "-dxdebug.mode=debug",
                    "-dxdebug.start_with_request=yes",
                    "-S",
                    "localhost:0"
                ],
                "program": "",
                "cwd": "${workspaceRoot}",
                "port": 9003,
                "serverReadyAction": {
                    "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                    "uriFormat": "http://localhost:%s",
                    "action": "openExternally"
                }
            }
        ]
    },

    // Extensions settings

    "files.associations": {
        "*.ts": "typescript"
    },
    "svelte.enable-ts-plugin": true,

    "tailwindCSS.includeLanguages": {
        "fusion": "html"
    },

    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (EEx)",
        "HTML (Eex)",
        "plist",
        "fusion"
    ],
    "smarty.highlight": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": true,
        "vue": true
    },
    "remote.autoForwardPortsSource": "hybrid",
    "editor.stickyScroll.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "never",
}
